#For yavdr:
cd /usr/share/vdr/plugins/skinnopacity/icons
git clone https://github.com/BooStars/nopacityartwork-themes
mv nopacityartwork-themes/anthra* .
nopacityartwork-themes/ -r
cp anthra*/theme-anthra*.conf /var/lib/vdr/plugins/skinnopacity/themeconfigs/
cp anthra*/nOpacity-anthra*.theme /var/lib/vdr/themes/
start vdr
 
